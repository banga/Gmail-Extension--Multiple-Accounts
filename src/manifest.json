{
  "manifest_version": 2,
  "name": "Google Mail Multi-Account Checker",
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "description": "Acess all your emails without opening Gmail",
  "background": {
    "page": "background.html"
  },
  "browser_action": {
    "default_title": "",
    "default_icon": "images/icon_128.png",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "images/icon_16.png",
    "48": "images/icon_48.png",
    "128": "images/icon_128.png"
  },
  "options_page": "options.html",
  "permissions": [
    "notifications",
    "tabs",
    "http://*.google.com/",
    "https://*.google.com/"
   ],
   "web_accessible_resources": [
    "images/icon_16.png",
    "images/icon_48.png",
    "images/icon_128.png"
   ],
  "version": "2.0.10"
}
